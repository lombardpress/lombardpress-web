		<h3>Paragraph Statistics</h3>
		<p>Word Count: {{wordcount}}</p>
		<p>Word Frequency</p>
		<ul>
			{{#each wordfrequency}}
				<li>{{@key}}: {{this}}</li>
			{{/each}}
		</ul>
	</div> -->



</div>
