          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <%= link_to "Home", "/" %>
            </li>
            <li class="divider"></li>
            <% Setting.all.each do |setting| %>
            <% unless setting.commentaryid == @config.commentaryid %>
              <li>
                <%= link_to setting.logo, "http://#{setting.commentaryid}.lombardpress.org" %>
              </li>
              <% end %>
            <% end %>
          </ul>
        </li>
