<style type="text/css">
  .status{display: none;}
  .itemLink:hover .status{display: inline;}
</style>
<!-- TODO: need a global style for top of page headers -->
<div style="padding: 20px">
  <h1><%= @results[0][:workgrouptitle] %></h1>
</div>
<div id="lbp-question-container" class="container">
  <%= render "text/questions/question_filter_form" %>
  <table class="table table-striped table-hover">
    <% @results.each do |result| %>

    <% link = "/text/questions/" + result[:sub_workgroup].to_s.split('/').last %>
    <tr class="lbp-question-row">
      <td><%= link_to result[:sub_workgroup_title], link %> 
      <br/><%= result[:sub_workgroup_desc] %></td>
    </tr>

        
    <% end %>
  </table>
</div>